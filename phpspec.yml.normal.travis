suites:
    crontab:
        namespace: Hexmedia\Crontab
        psr4_prefix: Hexmedia\Crontab
        src_path: ./src
        spec_path: ./Tests/

formatter.name: pretty

extensions:
    - PhpSpec\Extension\CodeCoverageExtension

code_coverage:
  format:
    - clover
  output:
    clover: build/logs/clover.xml
